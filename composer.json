{
    "name": "stbensonimoh/wp-silent-witness",
    "description": "Zero-cost, high-performance error log ingestion and deduplication for WordPress.",
    "type": "wordpress-plugin",
    "version": "2.0.1",
    "license": "GPL-2.0-or-later",
    "keywords": ["wordpress", "plugin", "error", "logging", "debug", "mu-plugin"],
    "homepage": "https://github.com/stbensonimoh/wp-silent-witness",
    "support": {
        "issues": "https://github.com/stbensonimoh/wp-silent-witness/issues",
        "source": "https://github.com/stbensonimoh/wp-silent-witness"
    },
    "authors": [
        {
            "name": "Benson Imoh",
            "email": "benson@stbensonimoh.com",
            "homepage": "https://stbensonimoh.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1.0 || ^2.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress --extensions=php .",
        "phpcbf": "phpcbf --standard=WordPress --extensions=php .",
        "lint": "php -l wp-silent-witness.php"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
